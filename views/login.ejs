<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Ticketac</title>
</head>

<body>

    <!-- NAVBAR Boostrap -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color: #e3f2fd;">
        <div class="container p-0">
            <div class="d-flex justify-content-start " id="navbarText">
                <a class="navbar-brand" href="#">
                    <img src="/images/train.png" width="30" height="30" alt="">
                </a>
                <a class="navbar-brand" href="#">Ticketac</a>
            </div>
            <div class="d-flex justify-content-end p-0 m-0" id="navbarText">
                <span class="navbar-text p-0">
                    <a class="nav-link" href="/" style='color:#c82333; font-weight: bold;;'>Connection</a>
                </span>
                <span class="navbar-text p-0">
                    <a class="nav-link" href="/mylasttrips">My last trips</a>
                </span>
            </div>
        </div>
    </nav>

    <div class="home">

        <% if(alertMessage.length> 0){ %>
            <div style="text-align: center; padding-top: 40px;">
                <h5 style="color:red;">No account found.<br>You need to sign-up first. </h5>
            </div>
            <% } %>

                <div class="inputFieldLogin">
                    <!-- Sign-In -->
                    <form style="text-align: center; margin: 50px;" action="users/sign-in" method="POST">
                        <h3 class="logIn">Sign-in : </h3>
                        <div class="form-group inputResume">
                            <input name="signInEmail" type="email" class="form-control" id="inputEmailSI"
                                placeholder="Email">
                        </div>

                        <div class="form-group inputResume">
                            <input name="signInPassword" type="password" class="form-control" id="inputPasswordSI"
                                placeholder="Password">
                        </div>

                        <button type="submit" class="btn btn-danger">Confirm</button>

                    </form>

                    <!-- Sign-up -->
                    <form style="text-align: center;" action="users/sign-up" method="POST">

                        <!-- Login title -->
                        <h3 class="logIn">Sign-up : </h3>

                        <div class="form-group inputResume">
                            <input name="signUpFirstName" type="text" class="form-control " id="inputFirstNameSU"
                                placeholder="FirstName">
                        </div>


                        <div class="form-group inputResume">
                            <input name="signUpName" type="text" class="form-control " id="inputNameSU"
                                placeholder="Name">
                        </div>



                        <div class="form-group inputResume">
                            <input name="signUpEmail" type="text" class="form-control" id="inputEmailSU"
                                placeholder="Email">
                        </div>

                        <div class="form-group inputResume">
                            <input name="signUpPassword" type="password" class="form-control" id="inputPasswordSU"
                                placeholder="Password">
                        </div>

                        <button type="submit" class="btn btn-danger">Confirm</button>

                    </form>

                </div>

                <%- include('footer')%>

    </div>





</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

</html>