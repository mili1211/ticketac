<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Ticketac</title>
</head>

<body>
    <%- include('navbar') %>

        <div class="home">

            <h3 class="homeTitle">My tickets : </h3>

            <div class="tableDiv">
                <table class="table table-light ">
                    <thead>
                        <tr>
                            <th scope="col">N°</th>
                            <th scope="col">Journey</th>
                            <th scope="col">Date</th>
                            <th scope="col">Departure time</th>
                            <th scope="col">Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let total=0; for (var i=0; i<mytickets.length; i++) {%>
                            <tr>
                                <th>
                                    <%=i+1%>
                                </th>
                                <td>
                                    <%=mytickets[i].departure%> / <%=mytickets[i].arrival%>
                                </td>
                                <td>
                                    <%=dateFormat(mytickets[i].date)%>
                                </td>
                                <td>
                                    <%=mytickets[i].departureTime%>
                                </td>
                                <td>
                                    <%=mytickets[i].price%>€
                                </td>
                            </tr>
                            <% total +=mytickets[i].price }%>


                                <tr class="table-danger">
                                    <th colspan="4">Total</th>
                                    <td>
                                        <%=total%>€
                                    </td>
                                </tr>

                    </tbody>
                </table>
            </div>

            <!--POP-UP to checkout-->

            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-md-offset-2 col-md-8 d-flex justify-content-end">
                    <button type="button" class="confirm btn btn-danger" data-bs-toggle="modal"
                        data-bs-target="#Modal">Confirm</button>
                </div>
            </div>

            <div class="modal fade" id="Modal" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-scrollable">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="ModalLabel">Have (a) good trip(s) !</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <table class="tab table table-borderless text-center">
                                <thead>
                                    <tr>
                                        <th scope="col">N°</th>
                                        <th scope="col">Journey</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Departure Time</th>
                                        <th scope="col">Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (let i=0; i<mytickets.length; i++){ %>
                                        <tr>
                                            <th scope="row">
                                                <%=i+1%>
                                            </th>
                                            <td>
                                                <%=mytickets[i].departure%> / <%=mytickets[i].arrival%>
                                            </td>
                                            <td>
                                                <%=dateFormat(mytickets[i].date)%>
                                            </td>
                                            <td>
                                                <%=mytickets[i].departureTime%>
                                            </td>
                                            <td>
                                                <%=mytickets[i].price%>€
                                            </td>
                                        </tr>
                                        <%}%>
                                </tbody>
                                <tfoot>
                                    <tr class="table-danger">
                                        <th>Total</th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th>
                                            <%=total%>€
                                        </th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <div class="modal-footer">
                            <a href="/confirmReservation"><button type="button" class="btn btn-danger"
                                    data-bs-dismiss="modal">Close</button></a>
                        </div>
                    </div>
                </div>
            </div>
            <%- include('footer') %>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
</body>

</html>